<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<fileSets>
		<!-- Local files -->
		<fileSet>
			<directory>${project.basedir}/../../..</directory>
			<includes>
				<include>README.md</include>
				<include>LICENSE</include>
				<include>NOTICE</include>
			</includes>
			<outputDirectory>.</outputDirectory>
			<lineEnding>windows</lineEnding>
		</fileSet>
		
		<!-- Generated Domino p2 site -->
		<fileSet>
			<directory>${project.build.directory}/repository</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>DominoUpdateSite</outputDirectory>
		</fileSet>
	</fileSets>
	
	<moduleSets>
		<!-- The Config NSF-->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.openntf.webapps:nsf-file-server-db-config</include>
			</includes>
			
			<binaries>
				<outputFileNameMapping>fileserverconfig.ntf</outputFileNameMapping>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<!-- The File Store NSF -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.openntf.webapps:nsf-file-server-db-config</include>
			</includes>
			
			<binaries>
				<outputFileNameMapping>filestore.ntf</outputFileNameMapping>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
